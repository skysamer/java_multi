package day02;

public class dsadsa {

	public static void main(String[] args) {
		int num = -90;
		String res1 = ((num > 0)? "양수" : (num == 0? "0": "음수"));
		System.out.println(num +" : " + res1);
		
		/*
		 * 다음은 대문자를 소문자로 변경하는 코드입니다.
		 * 변수 ch에 저장된 문자가 대문자 인 경우에만 
		 * 소문자로 변경하는 코드를 완성 합니다.
		 */
		char ch = 'P';
		char res2 = ((ch >= 'A' && ch <= 'Z') ? (char) (ch + 32) : ch);
		System.out.printf("%c 변환된 값 %c \n" , ch, res2);


	}

}
