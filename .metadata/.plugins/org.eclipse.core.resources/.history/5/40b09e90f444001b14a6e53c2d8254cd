package day03;

public class Prob3_이상민 {

	public static void main(String[] args) {
		String sourceString = "everyday we have is one more than we deserve";
				String encodedString = "";
				
				StringBuilder sb1 = new StringBuilder(sourceString);
				StringBuilder sb2 = new StringBuilder(encodedString);
				
				
				int i;
				for(i=0; i<sourceString.length(); i++) {
					sb1.charAt(i) +3=sb2.charAt(i);
					if(sb1.charAt(i)==' ') continue;
				}
				
				

				// 프로그램 구현부 끝.
				
				System.out.println("암호화할 문자열 : " + sourceString);
				System.out.println("암호화된 문자열 : " + encodedString);
	}

}
